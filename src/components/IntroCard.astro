    text-decoration: none;
    border-bottom: 1px solid rgba(120, 200, 255, 0.35);
  }

  .interest-link:hover {
    color: rgba(255, 255, 255, 0.95);
    border-bottom-color: rgba(255, 255, 255, 0.6);
  }

  /* Overwatch burst */
  .ow-star {
    position: absolute;
    width: 8px;
    height: 8px;
    border-radius: 999px;
    background: radial-gradient(circle, rgba(255, 210, 120, 0.95), rgba(255, 140, 60, 0.1));
    box-shadow: 0 0 12px rgba(255, 210, 120, 0.65);
    pointer-events: none;
    animation: ow-burst 620ms ease-out forwards;
  }

  @keyframes ow-burst {
    to {
      transform: translate(var(--dx), var(--dy)) rotate(var(--rot)) scale(0.2);
      opacity: 0;
      filter: blur(1px);
    }
  }

  @media (max-width: 900px) {
    .hero-actions-grid {
      grid-template-columns: 1fr;
    }
    .hero-logos {
      grid-template-columns: repeat(6, minmax(0, 1fr));
      justify-items: start;
    }
  }

  @media (max-width: 720px) {
    .hero-shell {
      flex-direction: column;
      align-items: stretch;
      height: auto;
    }

    .hero-layout {
      flex-direction: column;
      align-items: flex-start;
      height: auto;
    }

