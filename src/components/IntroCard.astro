    opacity: 0;
    transition: opacity 120ms ease, transform 120ms ease;
    pointer-events: auto;
  }

  .interest-pop.show {
    opacity: 1;
    transform: translate(-50%, -100%) scale(1);
  }

  .interest-pop-title {
    font-weight: 700;
    letter-spacing: 0.01em;
    margin-bottom: 4px;
  }

  .interest-pop-body {
    font-size: 0.88rem;
    line-height: 1.35;
    margin: 0 0 6px;
