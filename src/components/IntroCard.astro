<style>
  .hero-electrons {
    position: absolute;
    inset: 0;
    overflow: hidden;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  /* Dots layers (brighter nuclei) */
  .hero-electrons::before,
  .hero-electrons::after {
    content: "";
    position: absolute;
    inset: 0;

    background-image:
      radial-gradient(
        circle at var(--pos1, 20% 30%),
        rgba(190, 235, 255, 0.55) 1.2px,
        transparent 3px
