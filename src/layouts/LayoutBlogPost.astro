---
import BasicLayout from "./BasicLayout.astro";

interface Props {
  title: string;
  description: string;
  pubDate?: Date;
  minutesRead?: number;
  url?: string;
}

const { title, description, pubDate, minutesRead } = Astro.props;
---

<BasicLayout title={title} description={description} page="blog">
  <main class="post-shell">
    <article class="post-card">
      <header class="post-head">
        <h1 class="post-title">{title}</h1>

        {(pubDate || minutesRead) && (
          <div class="post-meta">
            {pubDate && (
              <time datetime={pubDate.toISOString()}>
                {pubDate.toLocaleDateString(undefined, { year: "numeric", month: "long", day: "numeric" })}
              </time>
            )}
            {pubDate && minutesRead ? <span class="dot">Â·</span> : null}
            {minutesRead && <span>{minutesRead} min read</span>}
          </div>
        )}
      </header>

      <div class="post-body">
        <slot />
      </div>
    </article>
  </main>
</BasicLayout>

<style is:global>
  .post-shell {
    width: 100%;
    max-width: 56rem;
    margin-inline: auto;
    padding: clamp(18px, 3vw, 34px) clamp(14px, 2vw, 22px);
  }

  .post-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(175, 200, 214, 0.16);
    border-radius: 14px;
    padding: clamp(16px, 2.2vw, 28px);
    color: rgba(255, 255, 255, 0.92);
    overflow: hidden;
  }

  .post-head {
    margin-bottom: 1rem;
  }

  .post-title {
    margin: 0 0 0.45rem 0;
    font-size: clamp(1.6rem, 3vw, 2.2rem);
    line-height: 1.15;
  }

  .post-meta {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9rem;
  }

  .dot {
    opacity: 0.7;
  }

  .post-body :is(p, li, blockquote) {
    color: rgba(255, 255, 255, 0.82);
    line-height: 1.65;
  }

  .post-body a {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: underline;
    text-decoration-color: rgba(216, 30, 91, 0.55);
    text-underline-offset: 3px;
  }

  .post-body a:hover {
    text-decoration-color: rgba(216, 30, 91, 0.9);
  }

  .post-body pre {
    overflow-x: auto;
  }

  .post-body img {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
  }
</style>
